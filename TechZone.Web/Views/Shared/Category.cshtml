@model IEnumerable<TechZone.Web.Models.ProductCategoryViewModel>

<div class="sub-cate">
    <div class="top-nav rsidebar span_1_of_left">
        <h3 class="cate">Danh mục sản phẩm</h3>
        <ul class="menu">
            @foreach (var category in Model.Where(x => x.ParentID == null))
            {
                var url = "/" + category.Alias + ".pc-" + category.ID + ".html/";

                var childCategories = Model.Where(x => x.ParentID == category.ID);
                if (childCategories.Count() > 0)
                {
                    <li>
                        <a href="javascript:void(0);">@category.Name <img class="arrow-img" src="/Assets/client/images/arrow1.png" alt="" /> </a>
                        @if (childCategories.Count() > 0)
                        {
                            <ul class="cute">
                                @foreach (var childCategory in childCategories)
                                {
                                    var childUrl = "/" + childCategory.Alias + ".pc-" + childCategory.ID + ".html/";
                                    <li class="subitem3"><a href="@childUrl">&nbsp;@childCategory.Name</a></li>
                                }
                            </ul>
                        }
                    </li>
                }
            }
            @foreach (var category in Model.Where(x => x.ParentID == null))
            {
                var url = "/" + category.Alias + ".pc-" + category.ID + ".html/";

                var childCategories = Model.Where(x => x.ParentID == category.ID);
                if (childCategories.Count() == 0)
                {
                    <li class="singleMenu"><a href="@url">@category.Name</a></li>
                }
            }
        </ul>
    </div>

    <div class="post">
        <a href="single.html">
            <img src="~/Assets/client/images/post/2903-TTT-2.png" style="height: 160px; margin: 10px;"/>
        </a>
        <div class="grid-chain-bottom chain-watch">
            <h6><a href="javascript:void(0);">Khám phá chi tiết gói “Dịch vụ vàng TechZone</a></h6>
        </div>
    </div>

    <div class="post">
        <a href="single.html">
            <img src="~/Assets/client/images/post/thang-uu-dai-thuong-hieu-panasonic-01.jpg" style="height: 160px; margin: 10px;"/>
        </a>
        <div class="grid-chain-bottom chain-watch">
            <h6><a href="javascript:void(0);">Tháng ưu đãi thương hiệu Panasonic</a></h6>
        </div>
    </div>

    <div class="post">
        <a href="single.html">
            <img src="~/Assets/client/images/post/vong-qua-may-man-uu-dai-panasonic-1.jpg" style="height: 160px; margin: 10px;"/>
        </a>
        <div class="grid-chain-bottom chain-watch">
            <h6><a href="javascript:void(0);">Tham gia vòng quay - Rước ngay xe Yamaha cực xịn</a></h6>
