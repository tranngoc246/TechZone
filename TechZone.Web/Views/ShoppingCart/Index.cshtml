
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
@section footerJS{
    <script src="~/Assets/client/js/controllers/shoppingCart.js"></script>
}
<div class="single_top">
    <h2 style="font-weight: 600; margin: 20px;">Giỏ hàng</h2>
    <div class="single_grid">
        <div id="cartContent">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 25px;">STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Hình ảnh</th>
                        <th style="">Giá</th>
                        <th style="width:70px">Số lượng</th>
                        <th>Thành tiền</th>
                        <th style="width: 36px;text-align:center">#</th>
                    </tr>
                </thead>
                <tbody id="cartBody"></tbody>
            </table>
            <div class="pull-right">
                Tổng tiền: <span id="lblTotalOrder"></span>
            </div>
            <button class="btn btn-success btnContinue">Tiếp tục mua hàng</button>
            <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>
            <button class="btn btn" id="btnCheckout">Đặt hàng</button>
        </div>
        <div id="divCheckout" style="display:none;">
            <div class="reservation_top">
                <div class="contact_right">
                    <h3>Đặt hàng</h3>
                    <div class="contact-form">
                        <form method="post" id="frmPayment">
                            @if (Request.IsAuthenticated)
                            {
                                <label>
                                    <input type="checkbox" id="chkUserLoginInfo" />
                                    Sử dụng thông tin đăng nhập
                                </label>
                            }
                            <input type="text" class="textbox" id="txtName" name="name" placeholder="Họ tên">
                            <input type="text" class="textbox" id="txtAddress" name="address" placeholder="Địa chỉ">
                            <input type="text" class="textbox" id="txtEmail" name="email" placeholder="Email">
                            <input type="text" class="textbox" id="txtPhone" name="phone" placeholder="Điện thoại">
                            <textarea value="" id="txtMessage" style="height:100px">Message</textarea>
                            <input type="button" id="btnCreateOrder" class="btn btn-success btnContinue" value="Đặt hàng">
                            <div class="clearfix"> </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>

</div>

<script id="tplCart" type="x-tmpl-mustache">
  <tr>
    <td style="text-align:center; vertical-align: middle;">{{Id}}</td>
    <td style="vertical-align: middle;">{{ProductName}}</td>
    <td style="vertical-align: middle;"><img src="{{Image}}" height="50" /></td>
    <td style="vertical-align: middle;">{{PriceF}}</td>
    <td style="vertical-align: middle;"><input style="width: 65px;" type="number" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" class="input txtQuantity" /></td>
    <td style="vertical-align: middle;" id="amount_{{ProductId}}">{{Amount}}</td>
    <td style="vertical-align: middle;"><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-trash"></i></button></td>
  </tr>

</script>
